{
  "servers": {
    "git": {
      "command": "uv",
      "args": [
        "--directory",
        "./mcp-servers/src/git",
        "run",
        "mcp-server-git",
        "--repository",
        "."
      ],
      "env": {
        "PATH": "${PATH}:${HOME}/.local/bin"
      }
    },
    "fetch": {
      "command": "uv",
      "args": [
        "--directory",
        "./mcp-servers/src/fetch",
        "run",
        "mcp-server-fetch"
      ],
      "env": {
        "PATH": "${PATH}:${HOME}/.local/bin"
      }
    }
  }
}